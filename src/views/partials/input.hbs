<div class="mb-4">
  <label class="block text-mainwhite text-sm font-bold mb-2" for="{{ id }}">{{ label }}</label>
  <input
    class="shadow appearance-none border rounded w-full py-2 px-3 text-mainblack leading-tight focus:outline-none focus:shadow-outline"
    id="{{ id }}"
    name="{{ name }}"
    type="{{ type }}"
    placeholder="{{ placeholder }}"
  />
  <span id="{{ id }}Error" class="text-red-500 text-sm"></span>
</div>
