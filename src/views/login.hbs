<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link href="/css/main.css" rel="stylesheet" />
    <script defer src="/js/login.js"></script>
  </head>
  <body
    style="
      background-image: url('/images/netflix-bg.webp');
      background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
    "
    class="font-sans flex justify-center items-center min-h-screen"
  >
    {{>navbar isAuthenticated=isAuthenticated}}
    <div class="w-full max-w-lg p-10 rounded-lg shadow-md bg-mainblack">
      <section class="flex flex-col items-center justify-center">
        <img src="/images/logo.png" class="object-cover items-center" width="265px" height="65px" />

        {{> typography/title
        className="text-center text-primary p-6"
        content="Login to Your Account"
        }}
      </section>
      <form id="loginForm" action="/login" method="POST">
        {{> input
          id="username"
          label="Username or Email"
          name="username"
          type="text"
          placeholder="Enter your username or email"
        }}
        {{> input
          id="password"
          label="Password"
          name="password"
          type="password"
          placeholder="Enter your password"
        }}
        <div class="flex items-center justify-end">
          {{> buttons/default
            id="loginButton"
            type="button"
            onClick="handleLogin()"
            content="Login"
            className="w-full mt-5"
          }}
        </div>
        <section class="text-center mt-6">
          {{> typography/body
            className="text-mainwhite"
            content="Don't have an account?"
          }}
          <a
            class="text-primary hover:underline hover:text-mainwhite transition-colors duration-300"
            href="/register"
            >Register</a
          >
        </section>
      </form>
      <div
        id="loadingSpinner"
        class="hidden fixed inset-0 items-center justify-center bg-black bg-opacity-50 z-50"
      >
        <section
          class="flex flex-col gap-2 items-center justify-center rounded-lg bg-mainblack bg-opacity-80 p-6"
        >
          <img src="/images/logo.png" class="object-cover items-center animate-pulse" />
          <p class="text-mainwhite text-xl font-semibold">Loading...</p>
        </section>
      </div>
    </div>
  </body>
</html>
